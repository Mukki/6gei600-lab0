{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ARM Assembly",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "group": "build"
        },
        {
            "label": "Disassemble ARM Assembly",
            "type": "shell",
            "command": "make",
            "args": ["disasm"],
            "group": "build"
        },
        {
            "label": "Start QEMU Debug Server",
            "type": "shell",
            "command": "make",
            "args": ["debug"],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*QEMU.*$",
                    "endsPattern": "^.*waiting for gdb.*$|^.*QEMU.*monitor.*$"
                }
            }
        }
    ]
}